@model Shop.Models.Chair
@{
    ViewBag.Title = "Редактирование карточки стула";
}
@using Shop.Data

 <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Редактирование карточки стула</h4>
        <form class="needs-validation" novalidate="" asp-action="Edit" asp-controller="Chair" asp-route-id="@Model.Id">

            <div class="col-12">
                <label asp-for="@Model.Name" class="form-label">Наименование</label>
                <div class="input-group has-validation">
                    <input type="text" asp-for="@Model.Name" class="form-control" required="">
                </div>
            </div>

            <div class="col-12">
                <label asp-for="@Model.Desc" class="form-label">Описание</label>
                <div class="input-group has-validation">
                    <input type="text" asp-for="@Model.Desc" class="form-control" required="">
                </div>
            </div>

            <div class="col-12">
                <label asp-for="@Model.Price" class="form-label">Стоимость</label>
                <div class="input-group has-validation">
                    <input type="number" asp-for="@Model.Price" class="form-control" required="">
                </div>
            </div>

            <div class="form-check">
                <label asp-for="@Model.IsFavourite" class="form-check-label">Популярное</label>
                <input type="checkbox" asp-for="@Model.IsFavourite" class="form-check-input" required="">
            </div>

            <div class="col-12">
                <label asp-for="@Model.Img" class="form-label">Картинка</label>
                <div class="input-group has-validation">
                    <input type="text" asp-for="@Model.Img" class="form-control" required="">
                </div>
            </div>

            <div hidden class="col-12">
                <label asp-for="@Model.Category.Name">Category.Name</label>
                <input type="text" asp-for="@Model.Category.Name" />
            </div>

            <div class="col-12">
                <input hidden list="categories" asp-for="@Model.Category">
                <label asp-for="@Model.Category" class="form-label">Category</label>
                
                @Html.DropDownList("chooseCategoryID", ViewBag.mySelectItems as List<SelectListItem>, Model.Category.Name)
            </div>

            <button class="w-100 btn btn-primary btn-lg" type="submit">Сохранить</button>

        </form>
 </div>
